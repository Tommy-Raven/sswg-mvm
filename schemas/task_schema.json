{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Tommy-Raven/SSWG-mvm1.0/tree/main/schemas/task_schema.json",
  "title": "Task Schema",
  "description": "Defines an atomic instructional task.",
  "type": "object",
  "required": ["title"],
  "properties": {
    "title": {
      "type": "string"
    },
    "instruction": {
      "type": "string"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ai_task_logic": {
      "type": "string"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "semantic_tag": {
      "type": "string"
    },
    "evaluation_hint": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
