{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Tommy-Raven/SSWG-mvm1.0/tree/main/schemas/semantics_schema.json",
  "title": "Semantic Schema",
  "description": "Defines linguistic and logical semantic mappings between workflow elements.",
  "type": "object",
  "required": ["term", "semantic_context"],
  "properties": {
    "term": {
      "type": "string"
    },
    "semantic_context": {
      "type": "string"
    },
    "related_terms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "embedding_vector": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "additionalProperties": true
}
